@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (@Html.BeginForm("Authenticate", "User"))
{
<table>
    <tr>
        <td>Username: </td>
        <td>@Html.TextBox("username")</td>
    </tr>
    <tr>
        <td>Password</td>
        <td>@Html.Password("password")</td>
    </tr>
    <tr>
        <td colspan="2"><input type="submit" value="Login" /></td>
    </tr>
</table>
}

<a href="Register">Register</a>